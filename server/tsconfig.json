{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["es7"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
